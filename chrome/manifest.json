{
  "name": "__MSG_appName__",
  "version": "1.0.0",
  "manifest_version": 3,
  "default_locale": "en",
  "description": "__MSG_appDesc__",
  "icons": {
    "16": "assets/cv.png",
    "48": "assets/cv.png",
    "128": "assets/cv.png"
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "option.html",
    "open_in_tab": true
  },
  "chrome_url_overrides" : {
    "newtab": "override.html"
  },
  "content_scripts": [
    {
      "matches": [ "http://*/*", "https://*/*"],
      "run_at": "document_start",
      "js": ["content_scripts/content_scripts.js"],
      "css": ["content_scripts/style.css"]
    }
  ],
  "permissions": [
    "downloads"
  ]
}