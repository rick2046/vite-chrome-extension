{
  "name": "vite",
  "version": "1.0.0",
  "manifest_version": 3,
  "description": "vite chrome extension tempalte",
  "icons": {
    "16": "assets/vue.svg",
    "48": "assets/vue.svg",
    "128": "assets/vue.svg"
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "action": {
    "default_popup": "popup/index.html"
  },
  "options_ui": {
    "page": "option/index.html",
    "open_in_tab": true
  },
  "chrome_url_overrides" : {
    "newtab": "override/index.html"
  },
  "content_scripts": [
    {
      "matches": [ "http://*/*", "https://*/*"],
      "run_at": "document_start",
      "js": ["content_scripts/content_scripts.js"],
      "css": ["content_scripts/style.css"]
    }
  ],
  "permissions": [
    "downloads"
  ]
}